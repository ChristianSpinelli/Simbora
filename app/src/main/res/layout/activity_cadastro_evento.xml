<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.simbora.gui.CadastroEventoActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/svCadastroEvento"
    android:layout_gravity="right">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="horizontal"

    android:id="@+id/cadastroEvento"
    android:weightSum="1">
<LinearLayout
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_height="fill_parent"
    android:id="@+id/cadastroEventoLeft">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etNomeEvento"
        android:hint="Nome do evento"
        android:editable="true"
        android:enabled="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/etTelefone"
        android:hint="Telefone para contato"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/etDescricao"
        android:hint="Descrição do evento"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Endereço"
        android:id="@+id/tvEndereco"
        android:editable="false"
        android:layout_marginTop="20dp"
        android:textSize="20dp" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/etLocal"
        android:hint="Local"
        android:layout_marginTop="10dp" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:ems="10"
        android:id="@+id/etRua"
        android:hint="Rua"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/etBairro"
        android:hint="Bairro"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/etCidade"
        android:hint="Cidade"
        android:layout_marginTop="10dp" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/etNumero"
        android:hint="Nº"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Horário"
        android:id="@+id/tvHorario"
        android:editable="false"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/etData"
        android:hint="Data do evento"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:id="@+id/etHoraInicio"
        android:hint="Hora de início"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:id="@+id/qtHoraFim"
        android:hint="Hora de término"
        android:layout_marginTop="10dp" />

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="fill_parent"
        android:id="@+id/cadastroEventoRight"
        android:baselineAligned="false"
        >

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:id="@+id/ibImagem"
            android:clickable="true"
            android:layout_gravity="top" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=""
            android:id="@+id/tvInvisivel"
            android:editable="false"

            android:layout_weight="1"
            android:enabled="false" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Cadastrar"
            android:id="@+id/bCadastrar"
            android:clickable="true"
            android:enabled="true"
            android:layout_marginBottom="1dp"
            android:layout_gravity="bottom" />

    </LinearLayout>
</LinearLayout>
    </ScrollView>