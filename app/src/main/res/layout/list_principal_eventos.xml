<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="220dp"
    android:background="#e6e1e3d5"
    android:paddingBottom="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:orientation="vertical">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="160dp"
            android:layout_weight="4"
            android:layout_gravity="top"
            android:id="@+id/imageViewEventoLista"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Caetano Veloso faz show no Teatro Guararapes"
            android:id="@+id/textViewTituloEventoLista"
            android:layout_weight="4" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:minHeight="180dp"
        android:layout_weight="3"
        android:id="@+id/linearLayoutInformacoes">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:minHeight="40dp"
            android:id="@+id/linearLayoutLocal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2"
                android:layout_gravity="center"
                android:layout_marginRight="6dp"
                android:src="@android:drawable/ic_menu_directions"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Centro de Convenções"
                android:id="@+id/textViewLocalEventoLista" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:id="@+id/linearLayoutHorario">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:layout_gravity="center"
                android:id="@+id/imageView3"
                android:src="@android:drawable/ic_menu_recent_history" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="17h00"
                android:layout_gravity="center"
                android:id="@+id/textViewHorarioEventoLista" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:id="@+id/linearLayoutPreco">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView4"
                android:layout_gravity="center"
                android:layout_marginRight="6dp"
                android:src="@mipmap/dinheiro"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text=" de 90,00 a 1.240,00"
                android:layout_gravity="center"
                android:id="@+id/textViewPrecoEventoLista" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:id="@+id/linearLayoutData">

        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Simbora!"
            android:background="#ffa500"
            android:id="@+id/buttonSimboraLista" />
    </LinearLayout>

</LinearLayout>